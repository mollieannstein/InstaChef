<div class="container">

<div class="row">
  <div class="page-header">
    <h1><%= @recipe.name %></h1>
  </div>
    <p><img src="<%= @recipe.image_url %>"><p>
</div>

<div class="col-sm-7">
  <div class="row">
    <div class="page-header">
      <h1><small>Ingredients</small></h1>
    </div>
    <div id="ingredients-div">
      <%= render partial: "ingredients", locals: { recipe: @recipe, servings: @servings_multiplier } %>
    </div>
  </div>

  <div class="row">
    <div class="page-header directions-box">
      <h1><small>Directions</small></h1>
    </div>
    <ol>
    <% @recipe.directions.each do |direction| %>
      <li><%= highlight_directions(direction.step, @recipe.recipe_procedures).html_safe %></li>
    <% end %>
    </ol>
  </div>
</div>

<div class="col-sm-5">
  <div class="terms-box">
      <div class="page-header">
        <h1><small>Culinary Terms</small></h1>
      </div>
      <div class="scrollable">
        <%= render partial: "procedures", locals: { recipe: @recipe } %>
      </div>
    </div>
  </div>
</div>
